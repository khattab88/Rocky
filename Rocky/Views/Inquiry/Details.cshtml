@model Rocky.Models.ViewModels.InquiryVM

<form method="post">
    <input type="hidden" asp-for="Inquiry.Id" />
    <br />

    <div class="backgroundwhite container">
        <div class="card">
            <div class="card-header bg-dark text-light ml-0 row container">
                <div class="col-12 d-none d-md-block col-md-6 pb-1">
                    <i class="fas fa-shopping-cart"></i> &nbsp; Inquiry Summary
                </div>
                <div class="col-12 col-md-4 offset-md-2 text-right">
                    <a asp-action="Index" class="btn btn-outline-info form-control btn-sm">Back</a>
                </div>
            </div>

            <div class="card-body pb-0">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-info">Pickup Details: </span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Name</div>
                                <div class="col-9">
                                    <input type="text" asp-for="Inquiry.FullName" class="form-control" />
                                    <span asp-validation-for="Inquiry.FullName"></span>
                                </div>
                            </div>
                             <div class="row my-1">
                                <div class="col-3">Email</div>
                                <div class="col-9">
                                    <input type="text" asp-for="Inquiry.Email" class="form-control" />
                                    <span asp-validation-for="Inquiry.Email"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Phone</div>
                                <div class="col-9">
                                    <input type="text" asp-for="Inquiry.PhoneNumber" class="form-control" />
                                    <span asp-validation-for="Inquiry.PhoneNumber"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Inquiry Date</div>
                                <div class="col-9">
                                    <input type="text" value="@Model.Inquiry.InquiryDate.ToShortDateString()" class="form-control" readonly />
                                </div>
                            </div>

                            <div class="row my-1 pt-2">
                                <div class="col-9 offset-3">
                                    <div class="row">
                                        <div class="col">
                                            <input type="submit" value="Convrt To Cart" class="btn btn-info form-control" />
                                        </div>
                                        <div class="col">
                                            <input type="submit" value="Delete" class="btn btn-danger form-control"
                                                formaction="/Inquiry/Delete" formmethod="post" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-info">Order Summary</span>
                            </h4>
                            <ul class="list-group mb-3">
                                @foreach (var detail in Model.InquiryDetails)
                                {
                                    <li class="list-group-item d-flex justify-content-between p-2">
                                        <div class="row container">
                                            <div class="col-8">
                                                <h6 class="my-0 text-info">@detail.Product.Name</h6>
                                                <small class="text-muted">Price: $@detail.Product.Price</small>
                                            </div>
                                            <div class="col-4"></div>
                                        </div>
                                    </li>
                                }
                            </ul>

                            <br />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>