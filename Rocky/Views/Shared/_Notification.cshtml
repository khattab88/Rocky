
@using Rocky.Utility

@if (TempData[Constants.Notifications.Success] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script type="text/javascript">
        @*toastr.options.timeOut = 0;
        toastr.options.extendedTimeOut = 0;*@

        toastr.success('@TempData[Constants.Notifications.Success]');
    </script>
}

@if(TempData[Constants.Notifications.Error] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.error('@TempData[Constants.Notifications.Error]');
    </script>
}

